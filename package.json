{
  "name": "breaking-bat",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Progressive Web App for recording slowpitch softball game statistics and scores",
  "keywords": [
    "softball",
    "scoring",
    "pwa",
    "react",
    "typescript",
    "sports"
  ],
  "author": "Breaking-Bat Development Team",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "commit": "cz",
    "prepare": "husky",
    "audit": "npm-audit-ci",
    "audit:dev": "npm-audit-ci --config ./audit-ci.json",
    "security:check": "npm run audit && npm run lint:security",
    "lint:security": "eslint . --ext ts,tsx",
    "licenses:check": "license-checker --summary",
    "licenses:detailed": "license-checker --csv --out licenses.csv",
    "deps:check": "npm outdated",
    "deps:update": "ncu -u --target minor",
    "bundle:analyze": "npm run build && npx vite-bundle-analyzer dist"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.4",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.8",
    "framer-motion": "^11.11.17",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-router-dom": "^7.1.1",
    "uuid": "^11.1.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@microsoft/eslint-plugin-sdl": "^1.1.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.1.2",
    "npm-audit-ci": "^1.2.1",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.0.1",
    "vite-bundle-analyzer": "^1.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "workbox-window": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
